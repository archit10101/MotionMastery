<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Practice.DisplayAngleComparisionActivity">

    <com.example.techniqueshoppebackendconnectionattempt1.ZoomableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/demoZoomLayout">


        <ImageView
            android:id="@+id/imageResultDemo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:visibility="visible" />

        <com.example.techniqueshoppebackendconnectionattempt1.Practice.OverlayView
            android:id="@+id/overlayDemo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />



    </com.example.techniqueshoppebackendconnectionattempt1.ZoomableFrameLayout>




    <TextView
        android:id="@+id/stepNumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/oswald"
        android:text="Step 1"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:id="@+id/leftButton"

            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/colorPrimaryDark"
            app:tint="@color/colorPrimary" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"

            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Done"
            android:textColor="@android:color/white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/rightButton"

            android:textColor="@android:color/white"
            android:src="@drawable/baseline_arrow_forward_24"
            android:backgroundTint="@color/colorPrimaryDark"
            app:tint="@color/colorPrimary" />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Right Elbow"
        android:textAlignment="center"
        android:id="@+id/angleName"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:id="@+id/angleLeft"

            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/colorPrimaryDark"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User:"/>

            <TextView
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/userAngleDisp"
                android:text="35°"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demo:"/>

            <TextView
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/demoAngleDisp"
                android:text="30°"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/angleRight"

            android:textColor="@android:color/white"
            android:src="@drawable/baseline_arrow_forward_24"
            android:backgroundTint="@color/colorPrimaryDark"
            app:tint="@color/colorPrimary" />



    </LinearLayout>
    <com.example.techniqueshoppebackendconnectionattempt1.ZoomableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/userZoomLayout">


    <ImageView
            android:id="@+id/imageResultUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:visibility="visible" />

        <com.example.techniqueshoppebackendconnectionattempt1.Practice.OverlayView
            android:id="@+id/overlayUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </com.example.techniqueshoppebackendconnectionattempt1.ZoomableFrameLayout>


</LinearLayout>